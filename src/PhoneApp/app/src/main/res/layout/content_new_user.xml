<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_user_login"
        tools:context="fitmirrorteam.fitmirrorapp.UserLogin"
        android:descendantFocusability="beforeDescendants"
        android:focusable="true"
        android:focusableInTouchMode="true"
        tools:layout_editor_absoluteY="81dp"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/headerShadow"
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="false"
            android:background="@drawable/header_line_shadow"
            android:contentDescription="@string/header_image_description"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/newUserUsernameHeader"
            style="@style/entryHeaderStyle"
            android:layout_width="175dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="75dp"
            android:text="@string/user_login_username_header_text"
            app:layout_constraintStart_toStartOf="@+id/newUserUsernameEntryField"
            app:layout_constraintTop_toBottomOf="@+id/headerShadow" />

        <EditText
            android:id="@+id/newUserUsernameEntryField"
            style="@style/placeholderTextStyle"
            android:layout_width="329dp"
            android:layout_height="45dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/user_entry_boxes"
            android:ems="10"
            android:hint="@string/user_login_name_placeholder_text"
            android:maxLines="1"
            android:imeOptions="actionDone"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:inputType="textPersonName"
            android:labelFor="@id/newUserUsernameEntryField"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newUserUsernameHeader" />

        <TextView
            android:id="@+id/newUserFirstNameHeader"
            style="@style/entryHeaderStyle"
            android:layout_width="175dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30dp"
            android:text="@string/title_new_user_first_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="@+id/newUserFirstNameEntryField"
            app:layout_constraintTop_toBottomOf="@+id/newUserUsernameEntryField" />

        <EditText
            android:id="@+id/newUserFirstNameEntryField"
            style="@style/placeholderTextStyle"
            android:layout_width="329dp"
            android:layout_height="45dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/user_entry_boxes"
            android:ems="10"
            android:hint="@string/new_user_first_name_hint"
            android:maxLines="1"
            android:imeOptions="actionDone"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:inputType="textPersonName"
            android:labelFor="@id/newUserFirstNameEntryField"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newUserFirstNameHeader" />

        <TextView
            android:id="@+id/newUserLastNameHeader"
            style="@style/entryHeaderStyle"
            android:layout_width="175dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:text="@string/title_new_user_last_name"
            app:layout_constraintStart_toStartOf="@+id/newUserLastNameEntryField"
            app:layout_constraintTop_toBottomOf="@+id/newUserFirstNameEntryField" />

        <EditText
            android:id="@+id/newUserLastNameEntryField"
            style="@style/placeholderTextStyle"
            android:layout_width="329dp"
            android:layout_height="45dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/user_entry_boxes"
            android:ems="10"
            android:hint="@string/new_user_last_name_hint"
            android:maxLines="1"
            android:imeOptions="actionDone"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:inputType="textPersonName"
            android:labelFor="@id/newUserLastNameEntryField"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newUserLastNameHeader" />

        <TextView
            android:id="@+id/newUserPasswordHeader"
            style="@style/entryHeaderStyle"
            android:layout_width="175dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30dp"
            android:text="@string/user_login_password_header_text"
            app:layout_constraintStart_toStartOf="@+id/newUserPasswordEntryField"
            app:layout_constraintTop_toBottomOf="@+id/newUserLastNameEntryField" />

        <EditText
            android:id="@+id/newUserPasswordEntryField"
            style="@style/placeholderTextStyle"
            android:layout_width="329dp"
            android:layout_height="45dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/user_entry_boxes"
            android:ems="10"
            android:hint="@string/user_login_password_placeholder_text"
            android:maxLines="1"
            android:imeOptions="actionDone"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:inputType="textPassword"
            android:labelFor="@id/newUserPasswordEntryField"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newUserPasswordHeader" />

        <EditText
            android:id="@+id/newUserConfirmPasswordEntryField"
            style="@style/placeholderTextStyle"
            android:layout_width="329dp"
            android:layout_height="45dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/user_entry_boxes"
            android:ems="10"
            android:hint="@string/new_user_password_confirm_hint"
            android:maxLines="1"
            android:imeOptions="actionDone"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:inputType="textPassword"
            android:labelFor="@id/newUserConfirmPasswordEntryField"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newUserPasswordEntryField" />

        <TextView
            android:id="@+id/newUserPasswordHintHeader"
            style="@style/entryHeaderStyle"
            android:layout_width="250dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:text="@string/title_new_user_password_hint"
            app:layout_constraintStart_toStartOf="@+id/newUserPasswordHintEntryField"
            app:layout_constraintTop_toBottomOf="@+id/newUserConfirmPasswordEntryField" />

        <EditText
            android:id="@+id/newUserPasswordHintEntryField"
            style="@style/placeholderTextStyle"
            android:layout_width="329dp"
            android:layout_height="45dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/user_entry_boxes"
            android:ems="10"
            android:hint="@string/new_user_password_reminder_hint"
            android:maxLines="1"
            android:imeOptions="actionDone"
            android:focusable="true"
            android:inputType="text"
            android:focusableInTouchMode="true"
            android:labelFor="@id/newUserPasswordHintEntryField"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newUserPasswordHintHeader" />

        <TextView
            android:id="@+id/newUserAgeHeader"
            style="@style/entryHeaderStyle"
            android:layout_width="175dp"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30dp"
            android:text="@string/title_new_user_age"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="@+id/newUserAgeEntryField"
            app:layout_constraintTop_toBottomOf="@+id/newUserPasswordHintEntryField" />

        <EditText
            android:id="@+id/newUserAgeEntryField"
            style="@style/placeholderTextStyle"
            android:layout_width="329dp"
            android:layout_height="45dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/user_entry_boxes"
            android:ems="10"
            android:hint="@string/new_user_age_hint"
            android:imeOptions="actionDone"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:inputType="number"
            android:labelFor="@id/newUserAgeEntryField"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newUserAgeHeader" />

        <TextView
            android:id="@+id/newUserMaleRadioHeader"
            style="@style/entryHeaderStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:text="@string/title_user_sex_male"
            app:layout_constraintStart_toStartOf="@+id/newUserAgeEntryField"
            app:layout_constraintTop_toBottomOf="@+id/newUserAgeEntryField" />

        <RadioButton
            android:id="@+id/newUserMaleRadioBttn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text=""
            android:background="@drawable/user_entry_radio_buttons"
            android:button="@android:color/transparent"
            app:layout_constraintLeft_toRightOf="@+id/newUserMaleRadioHeader"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/newUserAgeEntryField" />

        <TextView
            android:id="@+id/newUserFemaleRadioHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_user_sex_female"
            style="@style/entryHeaderStyle"
            app:layout_constraintLeft_toRightOf="@+id/newUserMaleRadioBttn"
            android:layout_marginStart="30dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/newUserAgeEntryField" />

        <RadioButton
            android:id="@+id/newUserFemaleRadioBttn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text=""
            android:background="@drawable/user_entry_radio_buttons"
            android:button="@android:color/transparent"
            app:layout_constraintLeft_toRightOf="@+id/newUserFemaleRadioHeader"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/newUserAgeEntryField" />

        <Button
            android:id="@+id/newUserSubmitButton"
            style="@style/primaryButtonStyle"
            android:layout_width="135dp"
            android:layout_height="50dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/primary_button"
            android:text="@string/submit_button_text"
            app:layout_constraintStart_toStartOf="@+id/newUserAgeEntryField"
            app:layout_constraintTop_toBottomOf="@+id/newUserFemaleRadioBttn" />

        <Button
            android:id="@+id/newUserCancelButton"
            android:layout_width="135dp"
            android:layout_height="50dp"
            android:text="@string/cancel_button_text"
            android:background="@drawable/cancel_button"
            style="@style/cancelButtonStyle"
            app:layout_constraintLeft_toRightOf="@+id/newUserSubmitButton"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@+id/newUserFemaleRadioBttn" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>

